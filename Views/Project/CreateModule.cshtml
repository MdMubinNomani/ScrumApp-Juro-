@model ScrumApp__Juro_.Models.Entities.Module

@{
    ViewData["Title"] = "Create Module";
}

<div class="container mt-5">
    <h1 class="mb-3">Create Module</h1> <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="CreateModule">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold"></label>
                    <input asp-for="Title" class="form-control" placeholder="Enter module title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter module description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CreatedAt" class="form-label fw-bold"></label>
                    <input asp-for="CreatedAt" class="form-control" />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="ProjectID" />

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-teal">Create</button>
                    <a asp-action="Enter" asp-route-id="@Model.ProjectID" class="btn btn-secondary">Back to Project</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}