@model ScrumApp__Juro_.ViewModels.ProjectsViewModel

@{
    ViewData["Title"] = "Project Details";
}


<head>
    <link rel="stylesheet" href="~/css/EnterStyles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ProjectDetailsStyle.css" />
    <link rel="stylesheet" href="~/css/LayoutStyles.css" />
</head>


<div class="container mt-5">
    <h1 class="mb-4">Project - @Model.Project.ProjectID</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h2 class="card-title">Title</h2>
            <p class="card-text">@Model.Project.Title</p>

            <h2 class="card-title">Description</h2>
            <p class="card-text">@Model.Project.Description</p>
        </div>
    </div>

    <h2 class="mb-3">Status</h2>

    <h4 class="mb-2">Not Started / Backlog</h4>
    <p>
        <a asp-action="CreateModule" asp-route-id="@Model.Project.ProjectID" class="btn btn-success">Create Module</a>
    </p>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Modules</h5>
                    @if (Model.Modules.FindAll(m => m.Status == "Not Started").Count != 0)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var module in Model.Modules.FindAll(m => m.Status == "Not Started"))
                            {
                                <li class="list-group-item ItemCard2 ItemCard-NotStarted">

                                    <!-- Modal -->
                                    <div class="modal fade" id="viewModal-@module.ModuleID" tabindex="-1" aria-labelledby="viewModalLabel-@module.ModuleID" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="viewModalLabel-@module.ModuleID">Module Details</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body text-start">
                                                    <p><strong>Project ID:</strong> @module.ProjectID</p>
                                                    <p><strong>Module ID:</strong> @module.ModuleID</p>
                                                    <p><strong>Title:</strong> @module.Title</p>
                                                    <p><strong>Status:</strong> @module.Status</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <a asp-controller="SubModule" asp-action="Create" asp-route-id="@module.ModuleID" class="btn btn-primary">
                                                        Add Submodule
                                                    </a>
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /Modal -->

                                    <p class="mb-1"><strong>Title:</strong> @module.Title</p>
                                    <div class="mt-2">
                                        <form asp-controller="Module" asp-action="MoveStatusUp" asp-route-id="@module.ModuleID" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-primary" title="Move Up">
                                                <i class="bi bi-arrow-up"></i>
                                            </button>
                                        </form>
                                        <form asp-controller="Module" asp-action="Delete" asp-route-id="@module.ModuleID" method="post" class="d-inline delete-form ms-1">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger" title="Remove">
                                                <i class="bi bi-x"></i>
                                            </button>
                                        </form>

                                        <a href="#" class="btn btn-sm btn-info ms-1" data-bs-toggle="modal" data-bs-target="#viewModal-@module.ModuleID" title="View">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-info shadow-sm mt-3">
                            No Modules created
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Submodules</h5>
                    @if (false)
                    {
                        <div class="ItemCard">
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info shadow-sm mt-3">
                            No Submodules created
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Tasks</h5>
                    @if (false)
                    {
                        <div class="ItemCard">
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info shadow-sm mt-3">
                            No Tasks created
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <h4 class="mb-2">In progress</h4>
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Modules</h5>
                    @if (Model.Modules.FindAll(m => m.Status == "In Progress").Count != 0)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var module in Model.Modules.FindAll(m => m.Status == "In Progress"))
                            {
                                <li class="list-group-item ItemCard2 ItemCard-InProgress">
                                    <p class="mb-1"><strong>Title:</strong> @module.Title</p>
                                    
                                    <div class="mt-2">
                                        <form asp-controller="Module" asp-action="MoveStatusUp" asp-route-id="@module.ModuleID" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-primary" title="Move Up">
                                                <i class="bi bi-arrow-up"></i>
                                            </button>
                                        </form>
                                        <form asp-controller="Module" asp-action="MoveStatusDown" asp-route-id="@module.ModuleID" method="post" class="d-inline ms-1">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-light" title="Move down">
                                                <i class="bi bi-arrow-down"></i>
                                            </button>
                                        </form>
                                        <form asp-controller="Module" asp-action="Delete" asp-route-id="@module.ModuleID" method="post" class="d-inline delete-form ms-1">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger" title="Remove">
                                                <i class="bi bi-x"></i>
                                            </button>
                                        </form>
                                        <button class="btn btn-sm btn-info ms-1" title="View">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-info shadow-sm mt-3">
                            No Modules created
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Submodules</h5>
                    @if (false)
                    {
                        <div class="ItemCard">
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info shadow-sm mt-3">
                            No Submodules created
                        </div>
