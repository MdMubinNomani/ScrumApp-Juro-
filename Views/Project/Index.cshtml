@model IEnumerable<ScrumApp__Juro_.Models.Entities.Project>

@{
    ViewData["Title"] = "Projects";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-teal">Projects</h1>
        <a class="btn btn-teal" asp-action="Create">+ Add New Project</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive rounded shadow-sm">
            <table class="table table-bordered align-middle mb-0">
                <thead class="table-teal text-center">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Title)</th>
                        @* <th>@Html.DisplayName("Created At")</th> *@
                        <th>@Html.DisplayName("Actions")</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@Html.DisplayFor(modelItem => item.Title)</td>
                            @* <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td> *@

                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a class="btn btn-sm btn-outline-teal" asp-action="Enter" asp-route-id="@item.ProjectID" title="Enter Project">
                                        <i class="bi bi-box-arrow-in-right"></i>
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@item.ProjectID" method="post" class="d-inline delete-form">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="End Project">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    </form>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info shadow-sm">No projects created yet.</div>
    }
</div>
