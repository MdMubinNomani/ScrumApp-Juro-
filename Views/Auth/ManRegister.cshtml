@model ScrumApp__Juro_.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Manager Signup";
}

<div class="login-card">
    <h2 style="color: teal;">Manager Sign Up</h2>

    <form asp-action="ManRegister" method="post">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="form-group">
            <label asp-for="@Model.Manager.Name"></label>
            <input asp-for="@Model.Manager.Name" class="form-control" type="text" />
            <span asp-validation-for="@Model.Manager.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Manager.Email"></label>
            <input asp-for="@Model.Manager.Email" class="form-control" type="email" />
            <span asp-validation-for="@Model.Manager.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.UserAuth.Username"></label>
            <input asp-for="@Model.UserAuth.Username" class="form-control" type="text" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.UserAuth.Password"></label>
            <input asp-for="@Model.UserAuth.Password" class="form-control" type="password" />
            <span asp-validation-for="@Model.UserAuth.Password" class="text-danger"></span>
        </div>

        <div class="button-group">
            <button type="submit" class="btn-teal">Register</button>
            <button type="button" onclick="location.href='@Url.Action("ManLogin", "Auth")'" class="signup-btn">Back to Login</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
