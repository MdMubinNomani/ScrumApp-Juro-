                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Tasks</h5>
                    @if (false)
                    {
                        <div class="ItemCard">
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info shadow-sm mt-3">
                            No Tasks created
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <h4 class="mb-2">Completed</h4>
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Modules</h5>
                    @if (Model.Modules.FindAll(m => m.Status == "Completed").Count != 0)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var module in Model.Modules.FindAll(m => m.Status == "Completed"))
                            {
                                <li class="list-group-item ItemCard2 ItemCard-Completed">
                                    <p class="mb-1"><strong>Title:</strong> @module.Title</p>
                                    <div class="mt-2">

                                        <form asp-controller="Module" asp-action="MoveStatusDown" asp-route-id="@module.ModuleID" method="post" class="d-inline ms-1">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-light" title="Move down">
                                                <i class="bi bi-arrow-down"></i>
                                            </button>
                                        </form>
                                        <form asp-controller="Module" asp-action="Delete" asp-route-id="@module.ModuleID" method="post" class="d-inline delete-form ms-1">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger" title="Remove">
                                                <i class="bi bi-x"></i>
                                            </button>
                                        </form>
                                        <button class="btn btn-sm btn-info ms-1" title="View">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-info shadow-sm mt-3">
                            No Modules created
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Submodules</h5>
                    @if (false)
                    {
                        <div class="ItemCard">
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info shadow-sm mt-3">
                            No Submodules created
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Tasks</h5>
                    @if (false)
                    {
                        <div class="ItemCard">
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info shadow-sm mt-3">
                            No Tasks created
